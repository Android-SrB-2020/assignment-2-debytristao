<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="work.nbcc.quiz.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_cheatFragment"
            app:destination="@id/cheatFragment" />
    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="work.nbcc.quiz.About_Fragment"
        android:label="About Rick and Morty"
        tools:layout="@layout/fragment_about_" />


    <fragment
        android:id="@+id/cheatFragment"
        android:name="work.nbcc.quiz.cheat_Fragment"
        android:label="fragment_cheat"
        tools:layout="@layout/fragment_cheat_" >
        <argument
            android:name="question"
            app:argType="integer"
            />
        <argument
            android:name="answer"
            app:argType="boolean"
            />
    </fragment>
    <fragment
        android:id="@+id/about_Fragment"
        android:name="work.nbcc.quiz.About_Fragment"
        android:label="fragment_about_"
        tools:layout="@layout/fragment_about_" />
</navigation>